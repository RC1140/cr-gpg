{
  "name": "Cr-gpg",
  "version": "0.7.2",
  "description": "Chrome-gpg. Quick hack that bridges gmail to your locally installed gpg.",
  "icons":{"128":"icon.png"},
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],
  "browser_action": {
      "default_title": "The chrome gpg encryption plugin",
      "default_icon": "icon.png",
      "popup": "popup.html"
  },
  "options_page": "options.html",
  "plugins": [
     {"path": "gmailGPG.plugin" },
     {"path": "gmailGPG.dll"},
     {"path": "gmailGPG.so"}
  ],
  "content_scripts": [
      { "matches": ["http://*/*", "https://*/*"], 
        "css": ["jquery-ui-1.8.11.thinkst.css"],
        "js": ["jquery-1.6.1.min.js","jquery-ui-1.8.13.custom.js","content_script.js","popup.js"], 
        "all_frames": true 
        }
  ],
  "permissions": [
      "tabs", "http://*/*", "https://*/*", "contextMenus"
    ],
    "background_page":"background.html"
}
